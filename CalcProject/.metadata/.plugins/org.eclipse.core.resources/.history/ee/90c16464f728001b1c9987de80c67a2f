package Principal;

import java.util.Scanner;

public class TesteCalc {
	
	

	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		int n1=0, n2=0, resultado=0;
		int soma=0, sub=0, multi=0, divisao=0;
		String operacao = "", sair="";
		
			
		do {
		
		System.out.print("Digite o primeiro numero: ");
		n1 = entrada.nextInt();
		while (n1 !=0 ) {
			System.out.print("Digite um numero válido : ");
			n1 = entrada.nextInt();
		}
		System.out.print("Digite o segundo numero: ");
		n2 = entrada.nextInt();
		
		System.out.print("Digite a operação que deseja fazer"
				+ "(+, -, *, /) : "); 
		operacao = entrada.next();
		
		soma = (n1+n2);
		sub = (n1-n2); 
		multi = (n1*n2); 
		divisao = (n1/n2);
		
	
		while (!operacao.equalsIgnoreCase("+")) {
		switch (operacao) {
			case ("+") :
				System.out.print(String.format("O resultado é : %d ", soma));
				break;
			case ("-") :
				System.out.print(String.format("O restultado é : %d ", sub));
				break;
			case ("*") :
				System.out.print(String.format("O resultado é : %d ", multi));
				break;
			case ("/") :	
				System.out.print(String.format("O resultado é : %d ", divisao));
				break;
			default :
				
				System.out.println("Digite algo válido");
				operacao = entrada.next();
				break;
			}
		}// final do switch
			
		System.out.println("Deseja continuar ? (S/N)");
		sair = entrada.next();

	}while (sair.equalsIgnoreCase("s"));
				
		entrada.close();
		
	}//Fim do Main
}//Final de tudo
